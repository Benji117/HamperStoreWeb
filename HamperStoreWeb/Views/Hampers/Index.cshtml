@model IEnumerable<HamperStoreWeb.DataAcess.Models.Hamper>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HamperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HamperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HamperId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HamperId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HamperId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
